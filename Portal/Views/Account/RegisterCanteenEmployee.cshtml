@{
    ViewData["Title"] = "Registreren Kantinemedewerker";
}

@model CanteenEmployeeRegisterModel

<div class="card-register-holder">
    <div class="card card-register">
        <h1 class="card-register-title">Registreren</h1>
        <form asp-action="RegisterCanteenEmployee" asp-controller="Account" method="post">
            <div class="form-group card-register-input">
                <label asp-for="EmployeeId"></label>
                <div><span asp-validation-for="EmployeeId" class="text-danger"></span></div>
                <input asp-for="EmployeeId" class="form-control" />
            </div>
            <div class="form-group card-register-input">
                <label asp-for="Name"></label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group card-register-input">
                <label asp-for="Location"></label>
                <div><span asp-validation-for="Location" class="text-danger"></span></div>
                <select asp-for="Location" class="form-control" asp-items="Html.GetEnumSelectList<LocationCanteenEnum>()">
                    <option>Selecteer</option>
                </select>
            </div>
            <div class="form-group card-register-input">
                <label asp-for="Password"></label>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group card-register-btn">
                <button class="btn btn-primary btn-main" type="submit">Registreer</button>
            </div>
        </form>
    </div>
</div>