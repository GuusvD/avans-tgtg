@{
    ViewData["Title"] = "Registreren Student";
}

@model StudentRegisterModel
@using Core.Domain.Enumerations

<div class="card-register-holder">
    <div class="card card-register">
        <h1 class="card-register-title">Registreren</h1>
        <form asp-action="RegisterStudent" asp-controller="Account" method="post">
            <div class="form-group card-register-input">
                <label asp-for="StudentId"></label>
                <div><span asp-validation-for="StudentId" class="text-danger"></span></div>
                <input asp-for="StudentId" class="form-control" />
            </div>
            <div class="form-group card-register-input">
                <label asp-for="Name"></label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group card-register-input">
                <label asp-for="DateOfBirth"></label>
                <div><span asp-validation-for="DateOfBirth" class="text-danger"></span></div>
                <input asp-for="DateOfBirth" class="form-control" />
            </div>
            <div class="form-group card-register-input">
                <label asp-for="EmailAddress"></label>
                <div><span asp-validation-for="EmailAddress" class="text-danger"></span></div>
                <input asp-for="EmailAddress" class="form-control" />
            </div>
            <div class="form-group card-register-input">
                <label asp-for="City"></label>
                <div><span asp-validation-for="City" class="text-danger"></span></div>
                <select asp-for="City" class="form-control" asp-items="Html.GetEnumSelectList<CityEnum>()">
                    <option>Selecteer</option>
                </select>
            </div>
            <div class="form-group card-register-input">
                <label asp-for="PhoneNumber"></label>
                <div><span asp-validation-for="PhoneNumber" class="text-danger"></span></div>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group card-register-input">
                <label asp-for="Password"></label>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group card-register-btn">
                <button class="btn btn-primary btn-main" type="submit">Registreer</button>
            </div>
        </form>
    </div>
</div>