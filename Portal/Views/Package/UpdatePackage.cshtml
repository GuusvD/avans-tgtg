@{
    ViewData["Title"] = "Bewerken Pakket";
}

@model ProductPackageModel
@using Core.Domain.Enumerations

<div class="row">
    <div class="card-package-holder">
        <div class="card card-package">
            <div class="card-body">
                <form asp-action="UpdatePackagePost" asp-controller="Package" method="post">
                    <div class="form-group">
                        <label asp-for="@Model.Package!.Name"></label>
                        <div><span asp-validation-for="@Model.Package!.Name" class="text-danger"></span></div>
                        <input asp-for="@Model.Package!.Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Package!.Products"></label>
                        <div><span asp-validation-for="@Model.Package!.SelectedProducts" class="text-danger"></span></div>
                        @for (int i = 0; i < Model.Products!.Count; i++)
                        {
                            if (Model.Package?.SelectedProducts != null && Model.Package!.SelectedProducts!.ToList().Contains(i + 1))
                            {
                                <input id=@Model.Products.ToArray()[i].Id type="checkbox" name="Package.SelectedProducts" value=@Model.Products.ToArray()[i].Id class="w3-check" checked />@Model.Products.ToArray()[i].Name<br />
                            }
                            else 
                            {
                                <input id=@Model.Products.ToArray()[i].Id type="checkbox" name="Package.SelectedProducts" value=@Model.Products.ToArray()[i].Id class="w3-check" />@Model.Products.ToArray()[i].Name<br />
                            }
                        }
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Package!.PickupTime"></label>
                        <div><span asp-validation-for="@Model.Package!.PickupTime" class="text-danger"></span></div>
                        <input asp-for="@Model.Package!.PickupTime" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Package!.LastPickupTime"></label>
                        <div><span asp-validation-for="@Model.Package!.LastPickupTime" class="text-danger"></span></div>
                        <input asp-for="@Model.Package!.LastPickupTime" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Package!.Price"></label>
                        <div><span asp-validation-for="@Model.Package!.Price" class="text-danger"></span></div>
                        <input asp-for="@Model.Package!.Price" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Package!.MealType"></label>
                        <div><span asp-validation-for="@Model.Package!.MealType" class="text-danger"></span></div>
                        <select asp-for="@Model.Package!.MealType" class="form-control" asp-items="Html.GetEnumSelectList<MealTypeEnum>()"></select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-main" type="submit">Bewerken</button>
                    </div>
                    @Html.Hidden("PackageId", @Model.Package!.Id)
                </form>
            </div>
        </div>
    </div>
</div>
